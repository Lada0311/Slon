print("Вітаємо у програмі для малювання ялинки!")
print("=" * 40)
try:
    висота = int(input("Введіть висоту ялинки (ціле число): "))
    символ = input("Введіть символ для ялинки (за замовчуванням '*'): ") or "*"
    
    if висота <= 0:
        print("Висота повинна бути додатнім числом!")
    else:
        print(f"\nОсь ялинка висотою {висота}:")
        print()
        
        for i in range(висота):
            кількість = 2 * i + 1
            пробіли = висота - i - 1
            print(" " * пробіли + символ * кількість)
        
        # Стовбур завжди малюємо звичайним символом
        print(" " * (висота - 1) + "|")
        print()

except ValueError:
    print("Помилка: будь ласка, введіть ціле число!")
